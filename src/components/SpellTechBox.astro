// src/components/SpellTechBox.astro
---
<div class="spelltech-box">
  <img 
    src="https://raw.githubusercontent.com/NDDEVVlog/ND_BehaviorTreeDocumentPage/main/public/images/SpellTechLogo.png" 
    alt="SpellTech Logo" 
    class="logo" 
  />
  <div class="text-wrapper">
    <div class="header">
      Sora the Dev
    </div>
    <div class="content">
      <slot />
    </div>
  </div>
</div>

<style>
  .spelltech-box {
    display: flex;
    /* Use flex-start to align the image with the top of the text block */
    align-items: flex-start; 
    gap: 1.5rem; /* Space between image and text block */
    
    /* --- The new background and border styling --- */
    background-color: #1f4e5a; /* A dark teal color to match the screenshot */
    border: 2px solid #00ffff; /* The bright cyan border */
    border-radius: 12px; /* More pronounced rounded corners */
    
    /* --- The glow effect --- */
    box-shadow: 0 0 10px #00ffff;
    
    padding: 1.5rem;
    margin: 2rem 0;
  }

  .logo {
    /* Made the logo bigger as requested */
    width: 64px;
    height: 64px;
    border-radius: 10%;
    /* Prevents the image from shrinking */
    flex-shrink: 0; 
  }

  /* This new wrapper holds the header and content, placing them next to the image */
  .text-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-top: 0.25rem; /* Minor adjustment for better vertical alignment */
  }

  .header {
    /* Changed text color to white */
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: 1.1rem;
    text-align: left; /* Align name to the left */
  }

  .content {
    /* Changed text color to a light gray for high contrast */
    color: var(--sl-color-gray-3);
    text-align: left; /* Align content to the left */
  }
</style>